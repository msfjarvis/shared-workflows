{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 4am on sunday"
    ]
  },
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "automerge": true,
      "automergeType": "branch"
    }
  ]
}
